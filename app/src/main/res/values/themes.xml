<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========================= -->
    <!-- APP BASE THEME -->
    <!-- ========================= -->
    <style name="Theme.UberClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">#3F51B5</item>
        <item name="colorSecondaryVariant">#303F9F</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Window -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- ========================= -->
    <!-- SPLASH SCREEN THEME -->
    <!-- ========================= -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/rider_splash_screen</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ========================= -->
    <!-- LOGIN / PHONE AUTH THEME -->
    <!-- (Firebase-style UI) -->
    <!-- ========================= -->
    <style name="LoginTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Firebase blue -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#3F51B5</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Window behavior -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>

        <!-- Background -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Buttons -->
        <item name="colorButtonNormal">#EBECF2</item>
        <item name="android:buttonStyle">@style/LoginButtonStyle</item>
    </style>

    <!-- ========================= -->
    <!-- LOGIN BUTTON STYLE -->
    <!-- ========================= -->
    <style name="LoginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <!-- ========================= -->
    <!-- FULLSCREEN DIALOG THEME -->
    <!-- ========================= -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>


</resources>
